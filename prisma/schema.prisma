// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou "mysql" ou "sqlite", depende do que você está usando
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int     @id @default(autoincrement())
  nome     String
  email    String  @unique
  senha    String
  isAdmin  Boolean @default(false)
  criadoEm DateTime @default(now())
  atualizadoEm DateTime @updatedAt
}

model Curso {
  id        Int     @id @default(autoincrement())
  titulo    String  @unique
  descricao String
  preco     Float
  categoria String
  imagem    String?
  conteudo  String
  criadoEm  DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  depoimentos Depoimento[]
}

model Depoimento {
  id      Int    @id @default(autoincrement())
  nome    String
  texto   String
  cursoId Int
  curso   Curso  @relation(fields: [cursoId], references: [id])

  criadoEm DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@unique([nome, texto])  // evita duplicados no seed
}